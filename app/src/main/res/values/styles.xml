<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styles" parent="@style/Base.Theme.LoginApp">
    </style>
    <style name="HintText">
        <item name="android:textColor">@color/space_cadet</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    <style name="TextView">
        <item name="android:fontFamily">@font/bungee_inline</item>
        <item name="android:elegantTextHeight">true</item>
        <item name="android:shadowColor">@color/raspberry_rose</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="CustomizedSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/raspberry_rose</item>
        <item name="colorSwitchThumbNormal">@color/dutch_white</item>
        <item name="android:colorForeground">@color/glaucous</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="ToastStyle">
        <item name="android:textColor">@color/ultra_violet</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>